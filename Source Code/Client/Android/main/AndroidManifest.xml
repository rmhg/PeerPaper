<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rzierfiz.peerpaper">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/peerpaper_logo_trans"
        android:label="@string/app_name"
        android:roundIcon="@drawable/peerpaper_logo_trans"
        android:supportsRtl="true"
        android:theme="@style/Theme.PeerPaper" >

        <activity android:name=".UI.Main.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.Peer.PeerActivity"/>
        <activity android:name=".UI.Peer.PeerConversation.PeerConversationActivity"/>

    </application>

</manifest>