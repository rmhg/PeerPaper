<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dis_back_peer"
    android:id="@+id/rootpcard"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/puidpcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "PUID"
            android:textSize="40dp"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical"
            >
            <TextView
                android:id="@+id/lstmsgpcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:text="Last Msg"
                android:layout_gravity="center|center_vertical"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/statrootpcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="#fff"
                android:padding="2dp"
                >
                <ImageView
                    android:id="@+id/dotstatpcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dotstatus"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/statpcard"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:autoSizeTextType="uniform"
                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>